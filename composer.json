{
  "name": "bambamboole/extended-faker",
  "type": "library",
  "require": {
    "php": ">=8.2.0",
    "fakerphp/faker": "^1.24",
    "league/commonmark": "^2.7",
    "symfony/yaml": "^7.3",
    "davidbadura/faker-markdown-generator": "^1.1"
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "phpstan/phpstan": "^2.1",
    "pestphp/pest-plugin-type-coverage": "^3.6",
    "rector/rector": "^2.1",
    "carthage-software/mago": "^1.0.0-beta.17"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Bambamboole\\ExtendedFaker\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "@post-autoload-dump": [
      "@mago:install-binary"
    ],
    "test": "vendor/bin/pest",
    "test:coverage": "vendor/bin/pest --coverage-html coverage",
    "test:ci": "vendor/bin/pest --coverage-clover coverage.xml",
    "phpstan:analyse": "vendor/bin/phpstan analyse --ansi --memory-limit=4G",
    "phpstan:baseline": "vendor/bin/phpstan analyse --generate-baseline --memory-limit=4G",
    "rector": "vendor/bin/rector",
    "lint": [
      "vendor/bin/mago fmt",
      "@rector",
      "@phpstan:analyse"
    ],
    "all": [
      "@lint",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "carthage-software/mago": true
    }
  }
}
